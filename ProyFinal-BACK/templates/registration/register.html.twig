{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="my-4">Registro</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
    
    <div class="form-group">
        {{ form_label(registrationForm.name, null, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.name) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(registrationForm.phone, null, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.phone) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(registrationForm.address, null, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(registrationForm.address, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.address) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    {{ form_widget(registrationForm.agreeTerms) }} Acepto los t√©rminos y condiciones
                </label>
            </div>
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Registrarse</button>
        </div>
    </div>
    
    {{ form_end(registrationForm) }}
    
    <div class="form-group mt-3">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="http://localhost:5173/login" class="btn btn-secondary">Volver al login</a>
        </div>
    </div>
{% endblock %}
